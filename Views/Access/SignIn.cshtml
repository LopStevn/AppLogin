@model AppLogin.ViewModels.UserViewModel;

@{
    Layout = null;
}

<html>
    <head>
        <title>Sign In</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Sign In
                    </div>

                    <div class="card-body">
                        <form asp-controller="Access" asp-action="SignIn" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Name" required asp-for="Name"/>
                            <input class="form-control mb-3" type="text" placeholder="Last Name" required asp-for="LastName"/>
                            <input class="form-control mb-3" type="text" placeholder="Email" required asp-for="Email"/>
                            <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password"/>
                            <input class="form-control mb-3" type="password" placeholder="Confirm Password" required asp-for="ConfirmPassword"/>

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-info" type="submit">Sign In</button>
                            </div> 

                        @if(ViewData["Message"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Message"]
                            </div>
                        }

                        Do you already have an account? <a asp-controller="Access" asp-action="Login">Login</a>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
